<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_ipnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入拦截的号码" />
    <Button
        android:id="@+id/et_outcall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_ipnumber"
        android:background="#ACD6FF"
        android:layout_marginLeft="20dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="保存拨出拦截电话"
        android:textSize="16dp" />
    <Button
        android:id="@+id/et_incall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_ipnumber"
        android:layout_toRightOf="@+id/et_outcall"
        android:layout_marginLeft="50dp"
        android:background="#ACD6FF"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:text="保存拨入拦截电话"
        android:textSize="16dp" />

</RelativeLayout>